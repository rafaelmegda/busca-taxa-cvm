<h2>Importador de Taxas CVM</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateTaxa">
            <h3>Informe o número do Mês e o Ano para realizar a Importação</h3>

            <label asp-for="Mes" class="control-label"></label>
            <div class="form-group">
                <select asp-for="Mes" class="form-control">
                    <option selected="selected" value="0">Selecione o Mês</option>
                    <option value="01">Janeiro</option>
                    <option value="02">Fevereiro</option>
                    <option value="03">Março</option>
                    <option value="04">Abril</option>
                    <option value="05">Maio</option>
                    <option value="06">Junho</option>
                    <option value="07">Julho</option>
                    <option value="08">Agosto</option>
                    <option value="09">Setembro</option>
                    <option value="10">Outubro</option>
                    <option value="11">Novembro</option>
                    <option value="11">Dezembro</option>
                </select>
            </div>
            <label asp-for="Ano" class="control-label"></label>
            <div class="form-group">
                <select asp-for="Ano" class="form-control">
                    <option selected="selected" value="0">Selecione o Ano</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                </select>
            </div>

